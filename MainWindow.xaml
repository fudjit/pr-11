<Window x:Class="pr_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr_11"
        mc:Ignorable="d"
        Title="Практическая работа №11" Height="245" Width="455" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem x:Name="about" Header="О программе" Click="about_Click"/>
            <MenuItem x:Name="exit" Header="Выход" Click="exit_Click"/>
        </Menu>
        <GroupBox Header="Первая строка" Margin="10,24,239,14">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="6,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Исходная строка: "/></TextBlock>
                <TextBox HorizontalAlignment="Left" Margin="4,23,0,0" TextWrapping="Wrap" Text="aa aba abba abbba abca abea" VerticalAlignment="Top" Width="165" IsReadOnly="True" Height="20"/>
                <Button x:Name="firstFilter" Content="Фильтр" HorizontalAlignment="Left" Margin="4,48,0,0" VerticalAlignment="Top" Width="165" Height="20" Click="applyFirstFilter_Click"/>
                <ListBox x:Name="firstListBox" Margin="4,78,9,4"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Вторая строка" Margin="220,24,34,14">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="6,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Исходная строка: "/></TextBlock>
                <TextBox HorizontalAlignment="Left" Margin="4,23,0,0" TextWrapping="Wrap" Text="aea aba agga avea afa acas asa" VerticalAlignment="Top" Width="155" IsReadOnly="True" Height="20" />
                <Button x:Name="secondFilter" Content="Фильтр" HorizontalAlignment="Left" Margin="4,48,0,0" VerticalAlignment="Top" Width="155" Height="20" Click="applySecondFilter_Click"/>
                <ListBox x:Name="secondListBox" Margin="5,78,14,4"/>

            </Grid>
        </GroupBox>
    </Grid>
</Window>
